<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="50dp"
    android:background="@color/primaryBgColor">

    <TextView
        android:id="@+id/citynav"
        android:layout_marginTop="80dp"
        style="@style/CityNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CityNav"
        android:layout_centerHorizontal="true"
         />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/citynav"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextEmail"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Mot de passe"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPassword"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="8dp"
        android:text="Se connecter" />

    <TextView
        android:id="@+id/tvRegisterLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLoginEmail"
        android:layout_marginTop="53dp"
        android:clickable="true"
        android:onClick="goToRegisterActivity"
        android:text="Si vous n'avez pas de compte, enregistrez-vous?"
        android:textColor="@color/white" />


</RelativeLayout>
